@model IEnumerable<PizzaHut.Models.Morder>

@{
    /**/

    ViewBag.Title = "Order";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@Html.Partial("~/Areas/Admin/Views/Shared/_topMenu.cshtml")
@Html.Partial("~/Areas/Admin/Views/Shared/_leftMenu.cshtml")
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row m-0">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Quản Lý Đơn Hàng</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Quản lý đơn hàng</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <section class="container-fluid ">
        <div class=" bg-white card  ">
            <div class="row justify-content-end">
                <div class="col-md-3">
                    <div class=" pt-1 mr-3 float-right">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-9  w-100 ">
                    @Html.Partial("_MessgeAlert")
                </div>
                <div class="col-md-12 p-3">

                    <table id="myTable1" class="table  table-striped table-bordered dt-responsive nowrap">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên khách hàng</th>
                                <th>Ngày Tạo</th>
                                <th>Trang thái</th>
                                <th>Chi tiết</th>
                                <th>Hình thức thanh toán</th>
                                @*<th>Chức Năng</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                String dh1 = "Đã xác nhận";
                                String dh2 = "Chưa xác nhận";
                                <tr>

                                    <td><a class="card-link " href="@Url.Action("Detail", "Orders", new { id = item.ID })"> @Html.DisplayFor(modelItem => item.ID)</a></td>
                                    <td class="font-weight-bold"> @Html.DisplayFor(modelItem => item.deliveryname)</td>
                                    <td> @Html.DisplayFor(modelItem => item.updated_at)</td>
                                    <td>
                                         <p class="text-danger"> @dh2</p>
                                    </td>

                                    <td><a href="@Url.Action("Detail", "Orders", new { id = item.ID })">Xem Chi tiết</a></td>
                                    <td>
                                    
                                        <span class="text-danger">Chưa thanh toán </span>
                                      
                                    </td>
                                    @*<td>
                              
                                        <a class="btn btn-sm btn-light text-danger border" href="@Url.Action("Deltrash", "Orders", new { id = item.ID })"> <i class="fas fa-trash-alt"></i></a>

                                        <a class="btn btn-sm btn-light text-orange border" href="@Url.Action("Deltrash", "Orders", new { id = item.ID })"> <i class="fas fa-ban "></i></a>
                                    </td>*@
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </section>
    <script>
        $("#order").addClass("active");
    </script>
