@model PizzaHut.Models.Muser
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layoutSite.cshtml";
}

<section class="breadcrumb-section bg-white">
    <h2 class="sr-only">Site Breadcrumb </h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/">Home</a></li>
                    <li class="breadcrumb-item active">Thông tin tài khoản</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<div class="page-section inner-page-sec-padding">
    <div class="container bg-white p-3">
        <div class="row">
            <div class="col-sm-12  ">
                @Html.Partial("_MessgeAlertc")
            </div>
            <div class="col-12">
                <div class="row">
                    <!-- My Account Tab Menu Start -->
                    <div class="col-lg-3 col-12">
                        <div class="myaccount-tab-menu nav" role="tablist">
                            <a href="#dashboad" class="active" data-toggle="tab">
                                <i class="fas fa-tachometer-alt"></i>
                                Thông tin tài khoản
                            </a>
                            <a href="#orders" data-toggle="tab"><i class="fa fa-cart-arrow-down"></i> Đơn hàng</a>
                            <a href="#address-edit" data-toggle="tab">
                                <i class="fa fa-map-marker"></i>
                                Địa chỉ
                            </a>
                            <a href="~/AuthCus/logout"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
                        </div>
                    </div>
                    <!-- My Account Tab Menu End -->
                    <!-- My Account Tab Content Start -->
                    <div class="col-lg-9 col-12 mt--30 mt-lg--0">
                        <div class="tab-content" id="myaccountContent">
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Tài khoản của bạn</h3>
                                    <div class="welcome mb-20">
                                        <p>
                                            Hello, <strong class="text-danger font-weight-bold"> <strong class="text-danger font-weight-bold" id="1_fullname">   @Model.fullname </strong></strong> (Nếu không phải <strong id="2_fullname">
                                                @Model.fullname
                                            </strong><a href="~/AuthCus/logout" class="logout">
                                                Đăng xuất
                                            </a>)
                                        </p>
                                    </div>
                                    <p class="mb-0">
                                        Từ đây bạn có thể dễ dàng xem: thông tin tài khoảng,
                                        đơn hàng, sản phẩm yêu thích, chỉnh sửa địa chỉ, thông tin...
                                    </p>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="orders" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Đơn hàng</h3>
                                    <div class="myaccount-table table-responsive text-center">
                                        <table class="table table-bordered">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>Mã đơn hàng</th>
                                                    <th>Tên KH</th>
                                                    <th>Ngày tạo</th>
                                                    <th>Trạng thái</th>
                                                    <th>Total</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!--
                                                    
                                                -->
                                              
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="address-edit" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Địa chỉ đơn hàng</h3>
                                    <address>
                                        <p><strong>@Model.fullname</strong></p>
                                        <p>
                                            @Model.address
                                        </p>
                                        <p>Mobile: (+84) @Model.phone</p>
                                    </address>
                                    <a href="#" class="btn btn--primary">
                                        <i class="fa fa-edit"></i>Sửa địa chỉ
                                    </a>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="account-info" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>Chi tiết tài khoản</h3>
                                    <div class="account-details-form">

                                    
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                        </div>
                    </div>
                    <!-- My Account Tab Content End -->
                </div>
            </div>
        </div>
    </div>
</div>
