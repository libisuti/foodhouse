@model IEnumerable<PizzaHut.Models.Mmenu>
@{ 
    var mainmenuitem = ViewBag.mainmenuitem;

    }
<li class="menu-item has-children">
    <a href="javascript:void(0)">
        @mainmenuitem.name <i class="fas fa-chevron-down dropdown-arrow"></i>
    </a>
    <ul class="sub-menu">
        @foreach (var item in Model)
        {
            <li> <a href="~/@item.link">@item.name</a></li>
        }
    </ul>
</li>
